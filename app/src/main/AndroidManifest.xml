        </activity>
        <activity android:name=".ui.DesignTestActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.AnimatorTestActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.RxJavaTestActivity" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.CanvasTestActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>
